<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('<%= cl_image_path @category.photo.key, height: 300, crop: :fill %>')">
  <div>
    <h1><%= @category.name %></h1>
  </div>
</div>

<div class="container">
  <div class="info-top">
    <h3>Recipes</h3>
    <%= link_to 'Add a recipe', new_category_bookmark_path(@category), class: "btn btn-success" %>
  </div>

  <div class="cards">
      <% @category.bookmarks.each do |bookmark|%>
        <div class="card-recipe">

          <%= link_to bookmark_path(bookmark),
              data: {turbo_method: :delete,
                    turbo_confirm: "Are you sure?"}, class: 'btn-delete' do %>

              <i class="fa-solid fa-trash"></i>
            <% end %>
          <img src="<%= bookmark.recipe.image_url%>" alt="recipe image">

          <div class="card-recipe-description">
            <h2><%= bookmark.recipe.name %></h2>
            <p><%= bookmark.recipe.description.truncate(200) %><p>
          </div>

          <div class="card-recipe-info">
            <div>
              <i class="fa-solid fa-quote-left me-2"></i> <%= bookmark.comment %>
            </div>

            <div>
              <%= bookmark.recipe.rating %> <%= 'â­' * bookmark.recipe.rating %>
            </div>
          </div>


         </div>


    <% end %>
</div>





</div>
